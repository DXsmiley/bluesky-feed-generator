// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-py"
  interface = "sync"
  recursive_type_depth = -1
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model SubscriptionState {
  service String @id
  cursor Int
}

model Actor {
  did String @id
  handle String
  description String?
  displayName String?
  in_fox_feed Boolean
  in_vix_feed Boolean
  posts Post[]
}

model Post {
  uri String @id
  cid String
  reply_parent String?
  reply_root String?
  indexed_at DateTime @default(now())
  like_count Int @default(0)
  text String
  mentions_fursuit Boolean
  media_count Int
  authorId String
  author Actor @relation(fields: [authorId], references: [did])
  @@index([indexed_at])
}
